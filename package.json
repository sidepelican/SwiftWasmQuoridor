{
  "name": "quoridor-web",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@types/node": "^18.9.1",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "@vitejs/plugin-react": "^3.0.0",
    "@wasmer/wasi": "^0.12.0",
    "@wasmer/wasmfs": "^0.12.0",
    "buffer": "^6.0.3",
    "process": "^0.11.10",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^4.9.4",
    "vite": "^4.0.4",
    "wabt": "^1.0.32",
    "wasm-opt": "^1.3.0"
  },
  "scripts": {
    "start": "vite",
    "build": "tsc --noEmit && vite build",
    "tsc": "tsc --noEmit",
    "codegen": "swift package --allow-writing-to-package-directory codegen",
    "prebuild": "npm run swiftbuild && npm run wasm-opt && npm run wasm-strip",
    "swiftbuild": "swift build --product WasmLib -c release --triple wasm32-unknown-wasi",
    "wasm-opt": "wasm-opt -Os .build/release/WasmLib.wasm -o public/WasmLib.wasm",
    "wasm-strip": "wasm-strip public/WasmLib.wasm"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
